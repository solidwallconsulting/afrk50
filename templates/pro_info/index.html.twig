{% extends 'base.html.twig' %}

{% block title %}ProInfo index{% endblock %}

{% block body %}
    <h1>ProInfo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AreasOfExperience</th>
                <th>YearsOfExperience</th>
                <th>AreasOfIntrests</th>
                <th>ResumeFILE</th>
                <th>MoreInfo</th>
                <th>SocialLink</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pro_info in pro_infos %}
            <tr>
                <td>{{ pro_info.id }}</td>
                <td>{{ pro_info.areasOfExperience }}</td>
                <td>{{ pro_info.yearsOfExperience }}</td>
                <td>{{ pro_info.areasOfIntrests ? pro_info.areasOfIntrests|join(', ') : '' }}</td>
                <td>{{ pro_info.resumeFILE }}</td>
                <td>{{ pro_info.moreInfo }}</td>
                <td>{{ pro_info.socialLink }}</td>
                <td>
                    <a href="{{ path('pro_info_show', {'id': pro_info.id}) }}">show</a>
                    <a href="{{ path('pro_info_edit', {'id': pro_info.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pro_info_new') }}">Create new</a>
{% endblock %}
