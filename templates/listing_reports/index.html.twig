
{% extends 'admin-base.html.twig' %}


{% block body %}


	<main class="main-content">
		{% block topNav %}
			{{ parent() }}
		{% endblock %}

		<div class="conatiner-fluid content-inner mt-n5 py-0">
			<div class="row">

				<div class="col-12">
					<div class="card">
						<div class="card-header d-flex justify-content-between flex-wrap">
							<div class="header-title">
								<h4 class="card-title">Reports</h4>
							</div>

                            

						</div>
						<div class="card-body w-100">

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Reporter</th>
                <th>ReportDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing_report in listing_reports %}
            <tr>
                <td>{{ listing_report.id }}</td>
                <td>{{ listing_report.reporter.firstname }} {{ listing_report.reporter.lastname }}</td>
                <td>{{ listing_report.reportDate ? listing_report.reportDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('listing_reports_show', {'id': listing_report.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
							 

						</div>


					</div>

				</div>


			{% endblock %}
