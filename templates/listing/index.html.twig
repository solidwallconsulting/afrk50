 
{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Listing</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('listing_new') }}">Add</a>
                        </div>

                    </div>
                    <div class="card-body w-100">



                            <table class="table datatable">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th> 
                <th>Color</th> 
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><i class="{{listing.icon}}"></i>  {{ listing.name }}</td>
                
                <td>
                    <div class="color-preview" style="background-color:{{ listing.color }}"></div>
                </td>
                
               
                <td> 
                    <a href="{{ path('listing_edit', {'id': listing.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                    </div>


                </div>

            </div>


            {% endblock %}