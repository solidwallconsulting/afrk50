{% extends 'base.html.twig' %}

{% block title %}AFRK50 | Create account{% endblock %}

{% block body %}

 
<section class="login mt-5 mb-5" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="card card-body">
                    <div class="login-form login-area">
                        <div class="d-flex">
                            <h3>
                            Account Information 
                        </h3><small class="mt-2 " style="margin-left:15px" ><i> Already have an account? <a href="/login">Log in here</a></i></small>
                        </div>
    
                        <div class="login-form my-5">
                            {% if error %}
                            <div class="alert alert-danger">{{error}}</div>
                        {% endif %}
    
                        
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="form-group my-2"> 

                                
                                <button class="btn btn-primary log-btn btn-block mt-3 w-100" type="submit">{{ button_label|default('Create Free Account') }}</button>
    
    
    <p class="text-muted mt-5 mb-5" >By signing up, i agree withe the <a href="{{ path('privacy_policy') }}">Private Policy</a> and the <a href="{{ path('general_terms_and_conditions_route') }}">General Terms and Conditions</a> of AFRK50</p>



                               
                            </div>
    
                            
    
                        {{ form_end(form) }}
                        </div>
    
                        
                         
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


 

{% endblock %}
