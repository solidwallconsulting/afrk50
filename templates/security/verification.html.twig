{% extends 'base.html.twig' %}

{% block title %}AFRK50 | Email verification{% endblock %}

{% block body %}

 



<section class="login  mt-5 mb-5" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-xs-12">
                <div class="card bg-white">
                    <div class="card-body">
                        <div class="login-form login-area"> 
                             <h3>Account verification</h3>
                             <p class="text-muted">
                             A verification email is sent to <strong>{{email}}</strong>, please check your inbox in order to continue your account verification
                             </p>



                             

                             				{% if app.request.query.get('oups') != null %}
					<div class="alert alert-danger">{{app.request.query.get('oups') }}</div>

				{% endif %}


                             <p>
                                <a class="text-primary" href="{{ path('profile_route') }}">back to my account</a>
                             </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


 

{% endblock %}
