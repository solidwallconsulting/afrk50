{% extends 'base.html.twig' %}

{% block title %}AFRK50 | Connect{% endblock %}

{% block body %}

 



<section class="login  mt-5 mb-5" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="card bg-white">
                    <div class="card-body">
                        <div class="login-form login-area"> 
                            <form role="form" class="login-form" method="post">
                                <div class="form-group mb-3"> 
                                        <label for="" class="custom-label">Username or Email Address</label>
                                        <input   value="{{ last_username }}" name="email" id="inputEmail" class="form-control-afrk" autocomplete="email" required autofocus>
                                     
                                </div>
                                <div class="form-group mb-3"> 
                                        <label for="" class="custom-label">Password</label>
                                        <input type="password" name="password" id="inputPassword" class="form-control-afrk" autocomplete="current-password" required>
                                     
                                </div> 
                                    
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-primary log-btn btn-block mt-3 w-100">Log in</button>
                                </div>

                                <hr>

                                <p class="text-center">
                                    <a href="{{ path('choose_account_to_create_route') }}" class="login-text-bottom" >Create Free Account</a> | <a class="login-text-bottom" href="{{ path('forget_password_route') }}">Lost Password?</a> 

                                </p>
                                
                                <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}" >
        
                                {% if error %}
                                    <div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
        
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


 

{% endblock %}
