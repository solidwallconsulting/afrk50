 
{% extends 'admin-base.html.twig' %}


{% block body %}


	<main class="main-content">
		{% block topNav %}
			{{ parent() }}
		{% endblock %}

		<div class="conatiner-fluid content-inner mt-n5 py-0">
			<div class="row">

				<div class="col-12">
					<div class="card">
						<div class="card-header d-flex justify-content-between flex-wrap">
							<div class="header-title">
								<h4 class="card-title">Working days</h4>
							</div>

							<div>

								<a class="btn btn-primary btn-sm" href="{{ path('working_days_new') }}">Add</a>
							</div>

						</div>
						<div class="card-body w-100">


							<table class="table datatable">
								<thead>
									<tr>
										<th>#</th>
										<th>Day</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for working_day in working_days %}
										<tr>
											<td>{{ loop.index }}</td>
											<td>{{ working_day.day }}</td>
											<td>
												 
												<a href="{{ path('working_days_edit', {'id': working_day.id}) }}">Edit</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="3">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>


						</div>


					</div>

				</div>


			{% endblock %}
