{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Categories</h4>
                        </div>

                        <div>
                            <a class="btn btn-primary" href="{{ path('company_index') }}">back</a>
                            
                        </div>

                    </div>
                    <div class="card-body w-100">

                        <div class="company-cover-details-admin" style="background-image: url({{company.coverImageURL}});">
                           
                        </div>

                        <div class="mt-3 d-flex">

                            <div style="width: 180px; margin-right: 15px;">
                                <img src="{{company.logoURL}}" alt="" class="w-100">
                            </div>
                            <div>
                                <h3>{{company.name}}  

                                    <small>{% if company.status == 0 %}
                                        <span class="badge bg-warning">pending</span>
                                    {% endif %}
                                    {% if company.status == 1 %}
                                        <span class="badge bg-success">accepted</span>
                                    {% endif %}
                                    {% if company.status == 2 %}
                                        <span class="badge bg-info">waiting for Payment</span>
                                    {% endif %}
                                    
                                    {% if company.status == 4 %}
                                        <span class="badge bg-danger">declined</span>
                                    {% endif %}


                                    
                                        {% if days <= 0 %}
                                            <span class="badge bg-danger">expired</span>
                                        {% endif %}

                                        {% if days > 0 %}
                                            <span class="badge bg-success">payed</span>
                                        {% endif %}

                                </small>
                                



                                {% if company.isDeleted == true %}
                                        <span class="badge bg-danger">deleted by user</span>
                                    {% endif %}



                                </h3>
                                <p class="text-muted">{{ company.slogan }}</p>
                                <p class="text-muted">Created at {{ company.createdAt | date('M d, Y   h:m') }}</p>
                                
                                <p class="text-muted"><strong>Author</strong> : {{ company.user.firstname }} {{ company.user.lastname }}</p>
                                <p class="text-muted"><strong>Left days</strong> : <span class="badge bg-secondary">{{ days}} days</span> </p>

                                <div class="d-flex">
                                    <a href="mailto:{{company.email}}" style="margin-right: 15px;" class="btn btn-sm btn-outline-info">send mail</a>

                                    <a href="{{company.website}}" target="blank" class="btn btn-sm btn-outline-info">web site</a>
                                </div>

                                <hr>
                                
                                <p>
                                    <strong>Actions</strong>
                                </p>
                                <div class="d-flex">
                                    <form action="" method="post">
                                        <input type="hidden" value="accept" name="todo-company-status">
                                        <button type="submit"  style="margin-right: 15px;" class="btn btn-sm btn-outline-primary">Approve</button>
                                         

                                    </form>
                                     
                                    <form action="" method="post">
                                        <input type="hidden" value="decline" name="todo-company-status"> 
                                        <button type="submit" style="margin-right: 15px;" class="btn btn-sm btn-outline-danger">Decline</button>
                                        

                                    </form>

                                    <form action="" method="post">
                                        <input type="hidden" value="restore" name="todo-company-status"> 
                                        <button type="submit" style="margin-right: 15px;" class="btn btn-sm btn-outline-warning">restore</button>
                                        

                                    </form>

                                    
                                </div>
                                


                            </div>
                        </div>
 

                    </div>


                </div>

            </div>


            {% endblock %}