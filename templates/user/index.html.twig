 

 

{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Users</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}">Add</a>
                        </div>

                    </div>
                    <div class="card-body w-100">




                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User</th>  
                                    <th>Address</th> 
                                    <th>Country</th> 
                                   
                                    <th>Bought days</th> 
                                     <th>Status</th> 
                                    
                                    
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>
                                        <div class="d-flex">
                                            <img src="{{ user.photoURL }}" width="50px" height="50px" alt="" style="float: left; margin-right:15px; border-radius: 50%">
                                            
                                            <div>
                                                <strong>{{ user.firstname }} {{ user.lastname }}</strong> <br>
                                                <small class="text-muted">{{ user.email }}</small><br>
                                                <small class="text-muted">{{ user.phone }}</small>
                                            </div>
                                        </div>
                                    </td>    
                                    <td>{{ user.address }}</td>  
                                    <td>{{ user.country }}</td> 


                                    <td>  
                                        {% if user.boughtDays == null %}
                                            <span class="badge bg-info">14 days</span>
                                        {% else %}
                                            <span class="badge bg-info">{{user.boughtDays}} days</span>
                                        {% endif %}
                                    </td> 
                                    

                                    <td>  
                                        {% if user.isBlocked == true %}
                                            <span class="badge bg-danger">blocked</span>
                                        {% else %}
                                            <span class="badge bg-success">active</span>
                                        {% endif %}
                                    </td> 
                                    
                                    
                                    <td> 
                                        <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">No record found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>



                    </div>


                </div>

            </div>


            {% endblock %}