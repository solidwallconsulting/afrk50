 

{% extends 'admin-base.html.twig' %}


{% block body %}


	<main class="main-content">
		{% block topNav %}
			{{ parent() }}
		{% endblock %}

		<div class="conatiner-fluid content-inner mt-n5 py-0">
			<div class="row">

				<div class="col-12">
					<div class="card">
						<div class="card-header d-flex justify-content-between flex-wrap">
							<div class="header-title">
								<h4 class="card-title">Partnerships requests</h4>
							</div>

                             


						</div>
						<div class="card-body w-100">

<table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Company</th>
                <th>Email</th> 
                <th>Sector</th> 
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partnership in partnerships %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ partnership.name }}</td>
                <td>{{ partnership.lastname }}</td>
                <td>{{ partnership.companyName }}</td>
                <td>{{ partnership.email }}</td>
                <td>
                    <span class="badge bg-info text-white">{{ partnership.sector }}</span>
                </td>
                <td>
                    <a href="{{ path('partnership_show', {'id': partnership.id}) }}">show</a> 
                </td>
            </tr> 
        {% endfor %}
        </tbody>
    </table>
							 

						</div>


					</div>

				</div>


			{% endblock %}
