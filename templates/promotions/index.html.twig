 
{% extends 'admin-base.html.twig' %}


{% block body %}


	<main class="main-content">
		{% block topNav %}
			{{ parent() }}
		{% endblock %}

		<div class="conatiner-fluid content-inner mt-n5 py-0">
			<div class="row">

				<div class="col-12">
					<div class="card">
						<div class="card-header d-flex justify-content-between flex-wrap">
							<div class="header-title">
								<h4 class="card-title">Promotions</h4>
							</div>

							<div>

								<a class="btn btn-primary btn-sm" href="{{ path('promotions_new') }}">Add</a>
							</div>

						</div>
						<div class="card-body w-100">


							 <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Duration</th>
                                        <th>Price</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for promotion in promotions %}
                                    <tr>
                                        <td>{{ loop.index}}</td>
                                        <td> <span class="badge bg-info text-white" >{{ promotion.duration }} days</span> </td>
                                        <td>{{ promotion.price |format_currency('EUR') }}</td>
                                        <td>
                                            <a href="{{ path('promotions_edit', {'id': promotion.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

						</div>


					</div>

				</div>


			{% endblock %}
